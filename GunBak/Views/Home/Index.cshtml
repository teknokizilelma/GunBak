@model GunBak.Models.RSSHaberView
@{
    ViewBag.Title = "GunBak Gündem Takip";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
@using System.Web;
@using System.IO;
@using System.Text;
@using  System.Text.RegularExpressions;
@using GunBak.Models;

<div class="clearfix"> </div>
		</div>
	</div>
<!-- header -->
<div class="container">
    <div class="col-md-9 bann-right">
        <!-- banner -->
        <div class="banner">
            <div class="header-slider">
                <div class="slider">
                    <div class="callbacks_container">
                        <ul class="rslides" id="slider">
                          
                                      
                                      @foreach (var item in Model.SonDakika)
                                      {
                                <li>
                                       
                                 <a href="@item.Link" target="_blank"><img src="@item.Media" class="img-responsive" alt=""></a>

                                      

                                        
                                    <div class="caption">
                                      <a href="@item.Link" target="_blank">  <h3>@item.Title</h3></a>
                                       
                                    </div>
                                </li>
                                 

                              }


                        
                      
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- banner -->
        <!-- nam-matis -->
        <div class="nam-matis">
            <div class="nam-matis-top">
                @{
              
                    foreach (var item in Model.Manset)
                    {
                <div class="col-md-6 nam-matis-1">
                   
                        <a href="@item.Link" target="_blank"><img src="@item.Media" class="img-responsive" alt=""></a>
       
                    <h3><a href="@item.Link" target="_blank">@item.Title</a></h3>
                    <div class="clearfix"> </div>
                    
                </div>
                        
                        
                    }
                }


            </div>
        </div>
        <!-- nam-matis -->
    </div>
    <div class="col-md-3 bann-left">
        <div class="b-search">
            <form name="aramaForm" action="@Url.Content("/Home/Ara")" method="post">
                <input type="text" name="ara" value="Search" />
                <input type="submit" value="">
            </form>
        </div>
        <h3>Categories</h3>
        <div class="blo-top">
            @foreach (var kategori in Model.Kategori)
            {
                <li><a href="/Home/Kategori/@kategori.kategoriAd">||   @kategori.kategoriBaslik</a></li>
            }
        </div>
        <h3>Reklam</h3>
        @{
            gundembakEntities db = new gundembakEntities();
            var reklam = db.reklams.Where(r => r.id == 1).Select(r => r.yanreklam).FirstOrDefault();

        }
        @Html.Raw(HttpUtility.HtmlDecode(reklam))
    </div>
    </div>
    <div class="clearfix"> </div>